<table width="100%">
<tr>
	<th width="500px"> <b>Server Health Summary</b></th>
      {% if hostvars[inventory_hostname]['compute_health']['api_response'] != {} %}
  <td class="color_healthy">HEALTHY <br>
    <b>{{hostvars[inventory_hostname]['compute_health']['api_response']}} </b><br>
  </td>
      {% endif %}
      {% if hostvars[inventory_hostname]['compute_critical']['api_response'] != {} %}
  <td   class="color_crtical">CRITICAL <br> 
    <b>{{hostvars[inventory_hostname]['compute_critical']['api_response']}}</b><br>
  </td>
      {% endif %}
      {% if hostvars[inventory_hostname]['compute_warning']['api_response'] != {} %}
  <td  class="color_warning">WARNING <br>
    <b> {{hostvars[inventory_hostname]['compute_warning']['api_response']}}</b><br>
  </td>
      {% endif %}

</tr>
<tr>

	<th width="500px">  <b>Fabric_Interconnects </b> </th>
    {% if hostvars[inventory_hostname]['FabricInterconnect_health']['api_response'] != {} %}
    <td class="color_healthy">HEALTHY <br>
    <b>{{hostvars[inventory_hostname]['FabricInterconnect_health']['api_response']}} </b><br>
  </td>
    {% endif %}
    {% if hostvars[inventory_hostname]['FabricInterconnect_critical']['api_response'] != {} %}
  <td   class="color_crtical">CRITICAL <br>
    <b>{{hostvars[inventory_hostname]['FabricInterconnect_critical']['api_response']}}</b><br>
  </td>
  {% endif %}
  {% if hostvars[inventory_hostname]['FabricInterconnec_warning']['api_response'] != {} %}
  <td  class="color_warning">WARNING <br>
    <b> {{hostvars[inventory_hostname]['FabricInterconnec_warning']['api_response']}}</b><br>
  </td>
  {% endif %} 
</tr> 

</table>


